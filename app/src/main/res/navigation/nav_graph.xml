<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.app.gong4.LoginFragment"
        android:label="로그인"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_loginFragment_to_findpasswordFragment"
            app:destination="@id/findpasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.app.gong4.SignupFragment"
        android:label="회원가입"
        tools:layout="@layout/fragment_signup" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.app.gong4.MainFragment"
        android:label="메인화면"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/findpasswordFragment"
        android:name="com.app.gong4.FindpasswordFragment"
        android:label="비밀번호 찾기"
        tools:layout="@layout/fragment_findpassword" >
        <action
            android:id="@+id/action_findpasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>